        "cliCmdPrefix",
        "memLimit",
        "timeLimit",
        "otherMemLimit",
        "otherTimeLimit",
        "enableInspector",
        "inspectorPort",
        "outCharLimit",
        "outNewlineLimit",
        "reminderMsgLimit",
        "tagNameRegex",
        "maxTagNameLength",
        "maxTagSize",
        "maxQuota",
        "maxGroupNameLength",
        "tagModeratorLevel",
        "permissionAdminLevel",
        "enableSed",
        "enableOtherLangs",
        "enableVM2",
        "enablePermissions",
        "enableReminders",
        "enableGlobalHandler",
        "reminderSendInterval",
        "wrapEvents",
        "setActivity",
        "activity"
