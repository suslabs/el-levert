        "maxGroupNameLength": {
            "type": "number"
        },
        "tagModeratorLevel": {
            "type": "number"
        },
        "permissionAdminLevel": {
            "type": "number"
        },
        "enableSed": {
            "type": "boolean"
        },
        "enableOtherLangs": {
            "type": "boolean"
        },
        "enableVM2": {
            "type": "boolean"
        },
        "enablePermissions": {
            "type": "boolean"
        },
        "enableReminders": {
            "type": "boolean"
        },
        "enableGlobalHandler": {
            "type": "boolean"
        },
        "reminderSendInterval": {
            "type": "number"
        },
        "wrapEvents": {
            "type": "boolean"
        },
        "setActivity": {
            "type": "boolean"
        },
        "activity": {
            "type": "object",
