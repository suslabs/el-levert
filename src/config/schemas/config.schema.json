            "type": "string"
        },
        "importLogFile": {
            "type": "string"
        },
        "eventsPath": {
            "type": "string"
        },
        "commandsPath": {
            "type": "string"
        },
        "cliCommandsPath": {
            "type": "string"
        },
        "dbPath": {
            "type": "string"
        },
        "queryPath": {
            "type": "string"
        },
        "cmdPrefix": {
            "type": "string"
        },
        "enableCliCommands": {
            "type": "boolean"
        },
        "cliCmdPrefix": {
            "type": "string"
        },
        "memLimit": {
            "type": "number"
        },
        "timeLimit": {
            "type": "number"
        },
        "otherMemLimit": {
            "type": "number"
        },
        "otherTimeLimit": {
            "type": "number"
        },
        "enableInspector": {
            "type": "boolean"
        },
        "inspectorPort": {
            "type": "number"
        },
        "outCharLimit": {
            "type": "number"
        },
        "outNewlineLimit": {
            "type": "number"
        },
        "reminderMsgLimit": {
            "type": "number"
        },
        "tagNameRegex": {
            "type": "string"
        },
        "maxTagNameLength": {
            "type": "number"
        },
        "maxTagSize": {
            "type": "number"
        },
        "maxQuota": {
            "type": "number"
