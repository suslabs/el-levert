{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "config",
    "title": "Config",
    "type": "object",
    "properties": {
        "logFile": {
            "type": "string"
        },
        "importLogFile": {
            "type": "string"
        },
        "eventsPath": {
            "type": "string"
        },
        "commandsPath": {
            "type": "string"
        },
        "cliCommandsPath": {
            "type": "string"
        },
        "dbPath": {
            "type": "string"
        },
        "logLevel": {
            "type": "string"
        },
        "cmdPrefix": {
            "type": "string"
        },
        "enableCliCommands": {
            "type": "boolean"
        },
        "cliCmdPrefix": {
            "type": "string"
        },
        "outCharLimit": {
            "type": "number"
        },
        "outLineLimit": {
            "type": "number"
        },
        "embedCharLimit": {
            "type": "number"
        },
        "embedLineLimit": {
            "type": "number"
        },
        "minResponseTime": {
            "type": "number"
        },
        "globalTimeLimit": {
            "type": "number"
        },
        "reminderMsgLimit": {
            "type": "number"
        },
        "reminderSendInterval": {
            "type": "number"
        },
        "maxTagNameLength": {
            "type": "number"
        },
        "tagNameRegex": {
            "type": "string"
        },
        "maxTagSize": {
            "type": "number"
        },
        "maxQuota": {
            "type": "number"
        },
        "memLimit": {
            "type": "number"
        },
        "timeLimit": {
            "type": "number"
        },
        "otherMemLimit": {
            "type": "number"
        },
        "otherTimeLimit": {
            "type": "number"
        },
        "enableInspector": {
            "type": "boolean"
        },
        "inspectorPort": {
            "type": "number"
        },
        "maxGroupNameLength": {
            "type": "number"
        },
        "tagModeratorLevel": {
            "type": "number"
        },
        "permissionAdminLevel": {
            "type": "number"
        },
        "enablePreviews": {
            "type": "boolean"
        },
        "enableSed": {
            "type": "boolean"
        },
        "enableEval": {
            "type": "boolean"
        },
        "enableOtherLangs": {
            "type": "boolean"
        },
        "enableVM2": {
            "type": "boolean"
        },
        "enablePermissions": {
            "type": "boolean"
        },
        "enableReminders": {
            "type": "boolean"
        },
        "enableGlobalHandler": {
            "type": "boolean"
        },
        "wrapEvents": {
            "type": "boolean"
        },
        "setActivity": {
            "type": "boolean"
        },
        "activity": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                }
            },
            "required": ["type", "text"]
        },
        "mentionUsers": {
            "type": "boolean"
        },
        "pingReply": {
            "type": "boolean"
        },
        "logToDiscord": {
            "type": "boolean"
        },
        "discordLogLevel": {
            "type": "string"
        },
        "logChannelId": {
            "type": "string"
        },
        "logWebhook": {
            "type": "string"
        },
        "bridgeBotIds": {
            "type": "array"
        },
        "bridgeBotMessageFormat": {
            "type": "string"
        },
        "bridgeBotMessageFormats": {
            "oneOf": [
                {
                    "type": "array"
                },
                {
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "logFile",
        "importLogFile",
        "eventsPath",
        "commandsPath",
        "cliCommandsPath",
        "dbPath",
        "logLevel",
        "cmdPrefix",
        "enableCliCommands",
        "cliCmdPrefix",
        "outCharLimit",
        "outLineLimit",
        "embedCharLimit",
        "embedLineLimit",
        "minResponseTime",
        "globalTimeLimit",
        "reminderMsgLimit",
        "reminderSendInterval",
        "maxTagNameLength",
        "tagNameRegex",
        "maxTagSize",
        "maxQuota",
        "memLimit",
        "timeLimit",
        "otherMemLimit",
        "otherTimeLimit",
        "enableInspector",
        "inspectorPort",
        "maxGroupNameLength",
        "tagModeratorLevel",
        "permissionAdminLevel",
        "enablePreviews",
        "enableSed",
        "enableEval",
        "enableOtherLangs",
        "enableVM2",
        "enablePermissions",
        "enableReminders",
        "enableGlobalHandler",
        "wrapEvents",
        "setActivity",
        "activity",
        "mentionUsers",
        "pingReply",
        "logToDiscord",
        "discordLogLevel",
        "logChannelId",
        "logWebhook",
        "bridgeBotIds"
    ],
    "anyOf": [{ "required": ["bridgeBotMessageFormat"] }, { "required": ["bridgeBotMessageFormats"] }]
}
