{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "reactions",
    "title": "Reactions",
    "type": "object",
    "properties": {
        "enableReacts": {
            "type": "boolean"
        },
        "multipleReacts": {
            "type": "boolean"
        },
        "parens": {
            "type": "object",
            "properties": {
                "leftParens": {
                    "type": "array"
                },
                "rightParens": {
                    "type": "array"
                }
            }
        },
        "funnyWords": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "word": {
                        "type": "string"
                    },
                    "words": {
                        "type": "array"
                    },
                    "emoji": {
                        "type": "string"
                    },
                    "emojis": {
                        "type": "array"
                    }
                },
                "oneOf": [
                    { "required": ["word", "emoji"] },
                    { "required": ["words", "emoji"] },
                    { "required": ["word", "emojis"] },
                    { "required": ["words", "emojis"] }
                ]
            }
        }
    },
    "required": ["enableReacts", "multipleReacts", "funnyWords"]
}
